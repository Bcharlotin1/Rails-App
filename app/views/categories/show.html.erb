
<h1><%=@category.name%>'s Games </h1>

<%@category.games.each do |game|%>
    
    <div class="row">
        <div class="column">
            <img src="<%= game.image%>" >
            <h3><%= link_to game.title, game_path(game) %></h3>
            <p> <%=game.description%> </p>
          <h4> <%= game.category.name%> </h4>
        </div>
    </div>
<%end%>