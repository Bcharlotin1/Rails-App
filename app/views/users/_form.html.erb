      <div id="error_explanation">
        <div class="bar">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        </div>
        <ul>
          <% @user.errors.each do |error| %>
          <div class="bar">
            <div class="bar error"><li><%= error.full_message %></li></div>
          </div>
          <% end %>
        </ul>
      </div>
    <% end %>
