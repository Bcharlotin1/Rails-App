<div class='form'>
    <%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
        <label for="username">Username</label>
        <%= text_field_tag :username%>
        <label for="password">Password</label>
        <%= password_field_tag :password %>
        <%= submit_tag "Sign In"%>
    <% end %>
</div>



